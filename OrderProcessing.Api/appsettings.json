{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "OrderProcessing.Api.Services.SignalRLoggingService": "Information"
    }
  },
  "AllowedHosts": "*",
  "ExternalServices": {
    "InventoryService": {
      "BaseUrl": "https://api.inventory.example.com",
      "TimeoutSeconds": 5
    },
    "PaymentService": {
      "BaseUrl": "https://api.payments.example.com",
      "TimeoutSeconds": 10
    },
    "ShippingService": {
      "BaseUrl": "https://api.shipping.example.com",
      "TimeoutSeconds": 8
    }
  },
  "Resilience": {
    "RetryPolicy": {
      "MaxRetries": 3,
      "BaseDelayMs": 500,
      "MaxDelayMs": 1000,
      "BackoffMultiplier": 2.0,
      "Jitter": 0.1
    },
    "CircuitBreaker": {
      "FailureThreshold": 1,
      "SamplingDurationMs": 1000,
      "MinimumThroughput": 3,
      "BreakDurationMs": 3000
    },
    "Timeout": {
      "DefaultTimeoutMs": 500,
      "InventoryTimeoutMs": 500,
      "PaymentTimeoutMs": 500,
      "ShippingTimeoutMs": 500
    },
    "Bulkhead": {
      "MaxConcurrentInventory": 10,
      "MaxConcurrentPayment": 5,
      "MaxConcurrentShipping": 8,
      "MaxQueueLength": 25
    }
  },
  "LoggingApi": {
    "BaseUrl": "https://localhost:7002"
  }//,
  //"Urls": "https://localhost:7001;http://localhost:7000"
}